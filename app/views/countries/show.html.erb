<h2>More info: </h2>
<table>
  <tbody>
    <% @country.articles.each do |article| %>
    <% country = article.country %>
      <tr>
        <td><%= link_to article.country.name, country_path(country.alpha2code) %></td>
        <td><%= article.title %></td>
        <td><img class="miniature" src="<%= article.photo %>" alt="" /><br><%= link_to 'Show', article %></td>
        <td><%= article.text %></td>
      </tr>
    <% end %>
  </tbody>
</table>

